{
  "compilerOptions": {
    "module": "system",
    "target": "es5",
    "sourceMap": true,
    "removeComments": true,
    "outDir": "build/",
    "moduleResolution": "node",
    "lib": [ "dom" ]
  },
  "exclude": [
    ".git",
    "node_modules",
    "**/dist/**"
  ],
  "include": [
    "src/scripts/**/*",
    "src/html/*",
    "src/css/*",
    "src/assets/**/*",
    "./package.json"
  ]
}
